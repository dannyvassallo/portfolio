<div id="honeycomb-wrap">
	<div class="honeycombs no-select" unselectable="on" onselectstart="return false;" onmousedown="return false;">
		<% @posts.each do |post| %>
			<% if post.image? %>
				<div class="comb">
					<%= image_tag( post.image.square.url ) %>
					<span><%= link_to post do %><%= fa_icon "search-plus", class: "fa-3x mag-glass" %><% end %></span>
				</div>
			<% end %>
		<% end %>		
	</div>
</div>
<% if policy(Post.new).create? %>
 <%= link_to "New Post", new_post_path, class: 'btn btn-success' %>
<% end %>